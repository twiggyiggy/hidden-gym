<section class="details-title">
  <h2>Hidden Gym- {{address}}</h2>
</section>

<img src="{{image}}" alt="gym photo">
<form action="/gyms/{{id}}/details/yes" method="POST">
    <button type="submit">Upvote!</button>
</form>
<form action="/gyms/{{id}}/details/no" method="POST">
    <button type="submit">Downvote!</button>
</form>
<h3>EQUIPMENT:</h3>
<li>{{equipmentAvailable}}</li>
</h3>
<h3>ADDITIONAL INFO:</h3>
<li>{{additionalInfo}}</li>
{{#if averageRating}}
<p>GYM RATING: {{averageRating}}%</p>
{{else}}
<p>GYM RATING: No votes yet. Be the first one to rate it!</p>
{{/if}}
<p>CREATED BY: {{creator}}</p>

<a href="/gyms/{{_id}}/details/edit">EDIT</a>

<form action="/gyms/{{_id}}/details/delete" method="POST">
    <button type="submit">DELETE</button>
</form>
<h3>Create Hidden Gym:</h3>

<form action="/gyms/create" method="POST" enctype="multipart/form-data">
  <label for="address">Address</label>
  <input type="text" name="address" id="address" required>
  
  <label for="photo">Upload an Image</label>
  <input type="file" name="photo"/>

  <label for="equipmentAvailable">Equipment Available</label>
  <input type="text" name="equipmentAvailable" id="equipmentAvailable">
  
  <label for="additionalInfo">Additional information</label>
  <input type="text" name="additionalInfo" id="additionalInfo">
  
  <button type="submit">Add the gym!</button>
</form>
